managed implementation in class zbp_i_pohdr unique;
//strict ( 2 );

define behavior for YI_POHDR alias Ekko //alias <alias_name>
persistent table ytbpohdr
lock master
authorization master ( instance )
//etag master <field_name>
{
  create;
  update;
  delete;
  field ( mandatory : create, readonly : update ) PONumber;
  field ( mandatory ) TotAmt, Currency;
  field ( readonly ) LocalCreatedBy, LocalCreatedAt, LocalLastChangedAt, LocalLastChangedBy, LastChangedAt;
  association _Ekpo { create; }

   action print_poform;

  //mapping all field from YTBPOHDR to YI_POHDR
  mapping for YTBPOHDR corresponding
    {
      PONumber           = ebeln;
      Vendor             = name1;
      Addrs              = addrs;
      ShipTo             = name2;
      Addr2              = addr2;
      PODate             = erdat;
      TotAmt             = netwr;
      Currency           = waers;
      SubTotal           = subtl;
      TotTax             = tttax;
      ShipCost           = shipc;
      OtherCost          = othcs;
      ReqName            = afnam;
      IncoTerms          = inco1;
      LocalCreatedBy     = local_created_by;
      LocalCreatedAt     = local_created_at;
      LocalLastChangedBy = local_last_changed_by;
      LocalLastChangedAt = local_last_changed_at;
      LastChangedAt      = last_changed_at;
    }
}

define behavior for YI_POITM alias Ekpo //alias <alias_name>
persistent table ytbpoitm
lock dependent by _Ekko
//authorization dependent by _Ekko
//etag master <field_name>
{
  update;
  delete;
  field ( readonly ) PONumber;
  field ( mandatory ) Description, Qty, TotalAmt;

  field ( mandatory : create, readonly : update ) ItemNumber;

  field ( readonly ) LocalCreatedBy, LocalCreatedAt, LocalLastChangedAt, LocalLastChangedBy, LastChangedAt;
  association _Ekko;

  //mapping all field from YTBPOITM to YI_POITM
  mapping for YTBPOITM corresponding
    {
      PONumber           = ebeln;
      ItemNumber         = ebelp;
      Description        = maktx;
      Qty                = ntgew;
      UnitPrice          = netpr;
      TotalAmt           = netwr;
      LocalCreatedBy     = local_created_by;
      LocalCreatedAt     = local_created_at;
      LocalLastChangedBy = local_last_changed_by;
      LocalLastChangedAt = local_last_changed_at;
      LastChangedAt      = last_changed_at;
    }
}
